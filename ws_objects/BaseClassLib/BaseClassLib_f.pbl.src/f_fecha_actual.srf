global function datetime f_fecha_actual (integer ai_local);DateTime ldt_fecha
if ai_local = 1 then
	ldt_fecha = DateTime(Today(), Now())
else
	select sysdate 
	  into :ldt_fecha
	  from dual;
	
	if IsNull(ldt_fecha) then ldt_fecha = DateTime(Today(), Now())
end if

return ldt_fecha
end function

