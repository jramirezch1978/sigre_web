global function string f_pesos_cajas (string as_fact);String peso_caja

SELECT wm_concat(' '||qry.peso_bruto||'Kgs') 
			into  :peso_caja
			from( select  cc.peso_bruto 
					from CNTAS_COBRAR_DET cc 
					where cc.nro_doc = :as_fact  
					group by cc.peso_bruto)  qry;

return peso_caja
end function

